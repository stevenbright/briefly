<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
  <context:annotation-config/>
  <context:property-placeholder />

  <bean id="launchMethod" class="briefly.dbinit.model.LaunchMode" factory-method="valueOf">
    <constructor-arg value="${briefly.dbinit.mode}"/>
  </bean>

  <bean id="app" class="briefly.dbinit.App" autowire="constructor" depends-on="launchMethod" />

  <import resource="dao/datasource-context.xml"/>
  <import resource="dao/dao-context.xml"/>
  <import resource="dao/tx-context.xml"/>
  <import resource="service.xml"/>
</beans>