<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="brieflyWebsite.dao.jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <property name="dataSource" ref="brieflyWebsite.dao.dataSource"/>
  </bean>

  <bean id="brieflyWebsite.dao.txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="brieflyWebsite.dao.dataSource"/>
    <qualifier value="brieflyWebsite.txManager"/>
  </bean>
</beans>
